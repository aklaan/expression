<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondrideau"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/menu_princ_titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="@string/expression"
            android:textColor="@color/WHITE"
            android:textSize="@android:dimen/app_icon_size" />

        <TextView
            android:id="@+id/textView1"
            android:textColor="@color/WHITE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Par téléphone :" />

        <TextView
            android:id="@+id/TextView01"
            android:textColor="@color/WHITE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="06 45 35 96 65"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:textColor="@color/WHITE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Par Mail :" />

        <TextView
            android:id="@+id/TextView02"
            android:textColor="@color/WHITE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="expression45@sfr.fr"
            android:textSize="30sp" />

    </LinearLayout>

</LinearLayout>
